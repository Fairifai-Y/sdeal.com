{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build",
        "buildCommand": "npm run build"
      }
    },
    {
      "src": "adwords-tool/wsgi.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/adwords-tool/wsgi.py"
    },
    {
      "src": "/adwords-tool",
      "dest": "/adwords-tool/index.html"
    },
    {
      "src": "/adwords-tool/",
      "dest": "/adwords-tool/tool.html"
    },
    {
      "src": "/static/(.*)",
      "dest": "/static/$1"
    },
    {
      "src": "/images/(.*)",
      "dest": "/images/$1"
    },
    {
      "src": "/manifest.json",
      "dest": "/manifest.json"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "env": {
    "PYTHONPATH": "adwords-tool",
    "FLASK_ENV": "production"
  },
  "functions": {
    "adwords-tool/wsgi.py": {
      "maxDuration": 30
    }
  }
}
